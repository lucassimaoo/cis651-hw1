<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Task2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn1"
            android:layout_width="185dp"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" android:text="Button 1" android:onClick="showMessage"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/btn1"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" android:text="Button 2" android:onClick="showMessage"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_below="@id/btn1"
            android:layout_height="wrap_content" android:text="Button 3" android:onClick="showMessage"/>

        <Button
            android:id="@+id/btn40"
            android:layout_width="185dp"
            android:layout_below="@id/btn3"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" android:text="Button 40" android:onClick="showMessage"/>

        <Button
            android:id="@+id/btn100000"
            android:layout_width="wrap_content"
            android:layout_below="@id/btn3"
            android:layout_toRightOf="@id/btn40"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" android:text="Button 100000" android:onClick="showMessage"/>


        <Button
            android:id="@+id/btnsave"
            android:layout_width="120dp"
            android:layout_below="@id/btn40"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" android:text="Save" android:onClick="showMessage"/>

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="120dp"
            android:layout_below="@id/btn40"
            android:layout_toRightOf="@id/btnsave"
            android:layout_height="wrap_content" android:text="Cancel" android:onClick="showMessage"/>

        <Button
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_below="@id/btn40"
            android:layout_toRightOf="@id/btnsubmit"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" android:text="Submit" android:onClick="showMessage"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>