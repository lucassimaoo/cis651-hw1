<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">

    <EditText android:id="@+id/language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="language"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Back" android:id="@+id/back_button3"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Finish" android:id="@+id/finish_button"/>


    </LinearLayout>

</FrameLayout>